<Application x:Class="_3dModelViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_3dModelViewer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ComponentStackPanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="10"/>
        </Style>
        
        <Style x:Key="TranslateElementDockPanel" TargetType="DockPanel">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ComponentLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0, 0, 0, 10"/>
        </Style>
    </Application.Resources>
</Application>
